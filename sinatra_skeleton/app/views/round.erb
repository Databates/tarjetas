<html>
  <head>
    <title>Question</title>
    <link rel="stylesheet" type="text/css" href="reset.css">
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" type="text/css" href="css/application.css">
    <link href='http://fonts.googleapis.com/css?family=Signika' rel='stylesheet' type='text/css'>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
  </head>
  <body>
    <%= erb :_header %>
    <div class="content">
      <h2 class="title">Deck: 
        <span class="highlight"><%= @deck.name %></span>
        <span class="round">Round: 
          <span class="highlight"><%= @round.id %></span>
        </span>
      </h2>
      <%= erb :_card %>
      <div id="guess-box">
        <form id="guess" action="">
          <input class="field" type="text" name="guess" value="enter your guess">
          <input class="button" type="submit" value="guess">
        </form>
      </div>
    </div>
  </body>
</html>
